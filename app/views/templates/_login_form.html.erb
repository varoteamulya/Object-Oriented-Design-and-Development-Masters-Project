<%= form_with(model: login, local: true) do |form| %>
    <% if login.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(login.errors.count, "error") %> prohibited this user from being logged:</h2>

          <ul>
            <% login.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= form.label :email_id %>
      <%= form.text_field :email_id, id: :user_email_id %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password, id: :user_password %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>